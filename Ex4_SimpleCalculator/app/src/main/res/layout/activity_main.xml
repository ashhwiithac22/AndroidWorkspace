<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/card_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§® CALCULATOR"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/calculator_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simple Arithmetic Operations"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add â€¢ Subtract â€¢ Multiply â€¢ Divide"
                android:textSize="14sp"
                android:textColor="@color/text_light"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Input Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Numbers"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/calculator_primary"
                    android:layout_marginBottom="16dp" />

                <!-- First Number Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Number 1:"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/etNumber1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter first number"
                        android:inputType="numberDecimal|numberSigned"
                        android:textSize="18sp"
                        android:padding="16dp"
                        android:background="@drawable/edittext_shape"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- Second Number Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Number 2:"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/etNumber2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter second number"
                        android:inputType="numberDecimal|numberSigned"
                        android:textSize="18sp"
                        android:padding="16dp"
                        android:background="@drawable/edittext_shape"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Operations Grid -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Operation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="24dp">

            <!-- Add Button -->
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:text="âž•\nADDITION"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:backgroundTint="@color/add_teal"
                android:textColor="@color/white"
                android:background="@drawable/button_shape" />

            <!-- Subtract Button -->
            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:text="âž–\nSUBTRACT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:backgroundTint="@color/subtract_indigo"
                android:textColor="@color/white"
                android:background="@drawable/button_shape" />

            <!-- Multiply Button -->
            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:text="âœ–\nMULTIPLY"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:backgroundTint="@color/multiply_amber"
                android:textColor="@color/white"
                android:background="@drawable/button_shape" />

            <!-- Divide Button -->
            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:text="âž—\nDIVIDE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:backgroundTint="@color/divide_rose"
                android:textColor="@color/white"
                android:background="@drawable/button_shape" />
        </GridLayout>

        <!-- Result Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculation Result"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/calculator_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Result will appear here"
                    android:textSize="22sp"
                    android:textColor="@color/text_hint"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@drawable/edittext_shape"
                    android:minHeight="80dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Clear Button -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ—‘ï¸ CLEAR ALL"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/clear_violet"
            android:textColor="@color/white"
            android:background="@drawable/button_shape" />
    </LinearLayout>
</ScrollView>